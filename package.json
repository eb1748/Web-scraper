{
  "name": "golf-journey-map-scraper",
  "version": "1.0.0",
  "description": "Automated golf course data collection and management system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "scrape:courses": "tsx src/scripts/scrape-courses.ts",
    "enrich:courses": "tsx src/scripts/enrich-courses.ts",
    "validate:data": "tsx src/scripts/validate-data.ts",
    "process:images": "tsx src/scripts/process-images.ts",
    "generate:pages": "tsx src/scripts/generate-pages.ts",
    "monitor:health": "tsx src/scripts/health-check.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "golf",
    "web-scraping",
    "automation",
    "data-collection"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.5",
    "@types/node-cache": "^4.2.5",
    "@types/tough-cookie": "^4.0.5",
    "@types/url-parse": "^1.4.11",
    "@types/user-agents": "^1.0.4",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.5",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "joi": "^17.11.0",
    "jsdom": "^23.0.1",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.44",
    "node-cache": "^5.1.2",
    "node-html-parser": "^6.1.12",
    "playwright": "^1.40.1",
    "puppeteer": "^21.7.0",
    "robots-parser": "^3.0.1",
    "sharp": "^0.33.1",
    "tough-cookie": "^4.1.3",
    "url-parse": "^1.5.10",
    "user-agents": "^1.1.24",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  }
}