# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/golf_journey_scraper?schema=public"

# Environment
NODE_ENV=development

# API Keys (Free Tier)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ===========================================
# API Configuration (Enhanced)
# ===========================================

# Global API Settings
API_GLOBAL_TIMEOUT_MS=30000
API_HEALTH_CHECK_INTERVAL_MS=300000
API_ENABLE_METRICS=true
API_LOG_REQUESTS=false

# Weather API Configuration (OpenWeather)
WEATHER_API_ENABLED=true
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_UNITS=imperial
WEATHER_TIMEOUT_MS=10000
WEATHER_FORECAST_DAYS=3
WEATHER_GOLF_OPTIMIZED=true

# Weather API Rate Limiting
WEATHER_RATE_LIMIT_PER_MINUTE=60
WEATHER_RATE_LIMIT_PER_HOUR=1000
WEATHER_BURST_ALLOWANCE=5
WEATHER_BACKOFF_MULTIPLIER=2
WEATHER_MAX_RETRIES=3
WEATHER_BASE_DELAY_MS=1000

# Weather API Circuit Breaker
WEATHER_CIRCUIT_BREAKER_THRESHOLD=0.5
WEATHER_CIRCUIT_BREAKER_RESET_MS=60000
WEATHER_CIRCUIT_BREAKER_MONITOR_MS=300000
WEATHER_CIRCUIT_BREAKER_FALLBACK=true

# Weather API Caching
WEATHER_CACHE_CURRENT_TTL_MIN=30
WEATHER_CACHE_FORECAST_TTL_HOURS=4
WEATHER_CACHE_GOLF_TTL_MIN=30
WEATHER_CACHE_MAX_SIZE=1000

# Wikipedia/Wikidata API Configuration
WIKIPEDIA_API_ENABLED=true
WIKIPEDIA_BASE_URL=https://en.wikipedia.org/api/rest_v1
WIKIDATA_BASE_URL=https://www.wikidata.org/w/api.php
WIKIPEDIA_TIMEOUT_MS=15000
WIKIPEDIA_MAX_SEARCH_RESULTS=10
WIKIPEDIA_CONTENT_TIMEOUT_MS=30000
WIKIPEDIA_FALLBACK_TO_WIKIDATA=true

# Wikipedia API Rate Limiting
WIKIPEDIA_RATE_LIMIT_PER_MINUTE=200
WIKIPEDIA_RATE_LIMIT_PER_HOUR=5000
WIKIPEDIA_BURST_ALLOWANCE=10
WIKIPEDIA_BACKOFF_MULTIPLIER=2
WIKIPEDIA_MAX_RETRIES=3
WIKIPEDIA_BASE_DELAY_MS=500

# Wikipedia API Circuit Breaker
WIKIPEDIA_CIRCUIT_BREAKER_THRESHOLD=0.6
WIKIPEDIA_CIRCUIT_BREAKER_RESET_MS=30000
WIKIPEDIA_CIRCUIT_BREAKER_MONITOR_MS=300000
WIKIPEDIA_CIRCUIT_BREAKER_FALLBACK=true

# Wikipedia API Caching
WIKIPEDIA_CACHE_TTL_HOURS=24
WIKIPEDIA_CACHE_MAX_SIZE=1000

# OpenStreetMap API Configuration
OSM_API_ENABLED=true
OSM_OVERPASS_URL=https://overpass-api.de/api/interpreter
OSM_NOMINATIM_URL=https://nominatim.openstreetmap.org
OSM_TIMEOUT_MS=25000
OSM_MAX_QUERY_RADIUS=50000
OSM_SEARCH_STRATEGIES=exact,fuzzy,location
OSM_FALLBACK_TO_NOMINATIM=true

# OSM API Rate Limiting
OSM_RATE_LIMIT_PER_MINUTE=10
OSM_RATE_LIMIT_PER_HOUR=300
OSM_BURST_ALLOWANCE=2
OSM_BACKOFF_MULTIPLIER=3
OSM_MAX_RETRIES=2
OSM_BASE_DELAY_MS=6000

# OSM API Circuit Breaker
OSM_CIRCUIT_BREAKER_THRESHOLD=0.7
OSM_CIRCUIT_BREAKER_RESET_MS=120000
OSM_CIRCUIT_BREAKER_MONITOR_MS=600000
OSM_CIRCUIT_BREAKER_FALLBACK=true

# OSM API Caching
OSM_CACHE_TTL_HOURS=24
OSM_CACHE_MAX_SIZE=1000

# Global Cache Settings
CACHE_CURRENT_WEATHER_TTL_MIN=30
CACHE_FORECAST_WEATHER_TTL_HOURS=4
CACHE_GOLF_WEATHER_TTL_MIN=30
CACHE_WIKIPEDIA_TTL_HOURS=24
CACHE_OSM_TTL_HOURS=24

# Data Enrichment Configuration
ENRICHMENT_BATCH_SIZE=10
ENRICHMENT_CONCURRENT_CALLS=2
ENRICHMENT_SKIP_EXISTING=true
ENRICHMENT_VALIDATE_RESULTS=true
ENRICHMENT_MIN_QUALITY_SCORE=70
ENRICHMENT_SAVE_PARTIAL=true

# Legacy API Rate Limits (for backward compatibility)
OPENWEATHER_RATE_LIMIT=60
WIKIPEDIA_RATE_LIMIT=200
OVERPASS_RATE_LIMIT=10
NOMINATIM_RATE_LIMIT=1

# Scraping Configuration
USER_AGENT="Mozilla/5.0 (compatible; GolfCourseBot/1.0)"
SCRAPE_DELAY_MS=2000
MAX_CONCURRENT_REQUESTS=3
RETRY_ATTEMPTS=5

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1440
IMAGE_QUALITY=85

# Data Validation
MINIMUM_DESCRIPTION_LENGTH=50
MINIMUM_IMAGE_RESOLUTION=1200
CONFIDENCE_THRESHOLD=70

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# File Storage Paths
DATA_DIR=./data
MEDIA_DIR=./media
TEMP_DIR=./data/temp
EXPORT_DIR=./data/exports